# Cache control headers for static assets
# This file is used by hosting providers like Netlify, Vercel, etc.

# Don't cache meta.json - always fetch fresh
/meta.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Cache JS/CSS chunks with hash for 1 year (they have content hashes in filename)
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

/assets/*.css
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 week
/assets/*.png
  Cache-Control: public, max-age=604800

/assets/*.jpg
  Cache-Control: public, max-age=604800

/assets/*.svg
  Cache-Control: public, max-age=604800

# Don't cache index.html
/index.html
  Cache-Control: no-cache, no-store, must-revalidate

