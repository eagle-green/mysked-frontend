import { useState, useCallback, useEffect } from 'react';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';

import Box from '@mui/material/Box';
import Card from '@mui/material/Card';
import Stack from '@mui/material/Stack';
import Button from '@mui/material/Button';
import Dialog from '@mui/material/Dialog';
import Avatar from '@mui/material/Avatar';
import Checkbox from '@mui/material/Checkbox';
import Typography from '@mui/material/Typography';
import LoadingButton from '@mui/lab/LoadingButton';
import CardHeader from '@mui/material/CardHeader';
import DialogTitle from '@mui/material/DialogTitle';
import CardContent from '@mui/material/CardContent';
import DialogContent from '@mui/material/DialogContent';
import DialogActions from '@mui/material/DialogActions';
import CircularProgress from '@mui/material/CircularProgress';
import FormControlLabel from '@mui/material/FormControlLabel';

import { paths } from 'src/routes/paths';
import { useParams, useRouter } from 'src/routes/hooks';

import { fDate, fTime } from 'src/utils/format-time';

import axios, { fetcher, endpoints } from 'src/lib/axios';
import { DashboardContent } from 'src/layouts/dashboard';

import { Label } from 'src/components/label';
import { toast } from 'src/components/snackbar';
import { Iconify } from 'src/components/iconify';
import { LoadingScreen } from 'src/components/loading-screen';
import { CustomBreadcrumbs } from 'src/components/custom-breadcrumbs';

import { useAuthContext } from 'src/auth/hooks';
import { getPositionColor } from 'src/utils/format-role';
import { JOB_POSITION_OPTIONS } from 'src/assets/data/job';
import { getSignedUrlViaBackend } from 'src/utils/backend-storage';

import { TmpCarousel } from 'src/sections/work/tmp/components/tmp-carousel';

// ----------------------------------------------------------------------

export function TmpDetailView() {
  const params = useParams();
  const router = useRouter();
  const { user } = useAuthContext();
  const queryClient = useQueryClient();
  const tmpId = params.id as string;

  const [confirming, setConfirming] = useState(false);
  const [confirmDialogOpen, setConfirmDialogOpen] = useState(false);
  const [acknowledged, setAcknowledged] = useState(false);
  const [allTmpsWithSignedUrls, setAllTmpsWithSignedUrls] = useState<any[]>([]);
  const [confirmingTmpId, setConfirmingTmpId] = useState<string | null>(null); // Track which TMP is being confirmed

  // Fetch TMP details
  const { data: tmpResponse, isLoading, error } = useQuery({
    queryKey: ['worker-tmp-detail', tmpId],
    queryFn: async () => {
      const response = await fetcher(endpoints.tmp.detail.replace(':id', tmpId));
      return response.data;
    },
    enabled: !!tmpId,
  });

  const tmpData = tmpResponse?.tmp_form;
  const workers = tmpResponse?.workers || [];
  const currentWorker = workers.find((w: any) => w.id === user?.id);

  // Fetch all TMPs for this job
  const { data: allTmpsResponse } = useQuery({
    queryKey: ['worker-tmp-all', tmpData?.job_id],
    queryFn: async () => {
      if (!tmpData?.job_id) return null;
      const response = await fetcher(endpoints.tmp.byJob.replace(':jobId', tmpData.job_id));
      return response.data;
    },
    enabled: !!tmpData?.job_id,
  });

  const allTmpForms = allTmpsResponse?.tmp_forms || [];

  // Fetch signed URLs and worker confirmations for each TMP
  useEffect(() => {
    const fetchSignedUrlsAndConfirmations = async () => {
      if (allTmpForms.length === 0) return;

      const tmpsWithUrlsAndConfirmations = await Promise.all(
        allTmpForms.map(async (tmp: any) => {
          let tmpWithUrl = tmp;
          
          // Get signed URL if needed
          if (tmp.pdf_url && !tmp.pdf_url.startsWith('blob:')) {
            try {
              const signedUrl = await getSignedUrlViaBackend(tmp.pdf_url, 'tmp-pdfs');
              tmpWithUrl = { ...tmp, pdf_url: signedUrl };
            } catch (error) {
              console.error(`Error getting signed URL for TMP ${tmp.id}:`, error);
            }
          }
          
          // Fetch worker confirmation for this specific TMP
          try {
            const response = await fetcher(endpoints.tmp.detail.replace(':id', tmp.id));
            const tmpWorkers = response.data?.workers || [];
            const workerConfirmation = tmpWorkers.find((w: any) => w.id === user?.id);
            
            return {
              ...tmpWithUrl,
              workerConfirmed: workerConfirmation?.confirmed || false,
            };
          } catch (error) {
            console.error(`Error fetching confirmation for TMP ${tmp.id}:`, error);
            return { ...tmpWithUrl, workerConfirmed: false };
          }
        })
      );

      setAllTmpsWithSignedUrls(tmpsWithUrlsAndConfirmations);
    };

    fetchSignedUrlsAndConfirmations();
  }, [allTmpForms, user?.id]);

  const handleBack = () => {
    router.push(paths.schedule.tmp.list);
  };

  const handleSelectTmp = useCallback(
    (newTmpId: string) => {
      router.push(paths.schedule.tmp.detail(newTmpId));
    },
    [router]
  );

  const handleConfirm = async () => {
    if (!acknowledged) {
      toast.error('Please acknowledge that you have read and understood the TMP');
      return;
    }

    const idToConfirm = confirmingTmpId || tmpId;

    try {
      setConfirming(true);
      await axios.post(`/api/tmp/${idToConfirm}/confirm`);
      toast.success('TMP confirmed successfully');
      setConfirmDialogOpen(false);
      setAcknowledged(false);
      setConfirmingTmpId(null);
      
      // Invalidate queries to refresh the data
      queryClient.invalidateQueries({ queryKey: ['worker-tmp-detail'] });
      queryClient.invalidateQueries({ queryKey: ['worker-tmp-all'] });
      queryClient.invalidateQueries({ queryKey: ['worker-tmp-list'] });
      
      // Refetch signed URLs and confirmations
      const response = await fetcher(endpoints.tmp.byJob.replace(':jobId', tmpData.job_id));
      const updatedTmpForms = response.data?.tmp_forms || [];
      
      const tmpsWithUrlsAndConfirmations = await Promise.all(
        updatedTmpForms.map(async (tmp: any) => {
          let tmpWithUrl = tmp;
          
          if (tmp.pdf_url && !tmp.pdf_url.startsWith('blob:')) {
            try {
              const signedUrl = await getSignedUrlViaBackend(tmp.pdf_url, 'tmp-pdfs');
              tmpWithUrl = { ...tmp, pdf_url: signedUrl };
            } catch (error) {
              console.error(`Error getting signed URL for TMP ${tmp.id}:`, error);
            }
          }
          
          try {
            const tmpResponse = await fetcher(endpoints.tmp.detail.replace(':id', tmp.id));
            const tmpWorkers = tmpResponse.data?.workers || [];
            const workerConfirmation = tmpWorkers.find((w: any) => w.id === user?.id);
            
            return {
              ...tmpWithUrl,
              workerConfirmed: workerConfirmation?.confirmed || false,
            };
          } catch (error) {
            console.error(`Error fetching confirmation for TMP ${tmp.id}:`, error);
            return { ...tmpWithUrl, workerConfirmed: false };
          }
        })
      );
      
      setAllTmpsWithSignedUrls(tmpsWithUrlsAndConfirmations);
    } catch (err: any) {
      console.error('Error confirming TMP:', err);
      toast.error(err.response?.data?.error || 'Failed to confirm TMP');
    } finally {
      setConfirming(false);
    }
  };

  if (isLoading) {
    return <LoadingScreen />;
  }

  if (error || !tmpData) {
    return (
      <DashboardContent>
        <Box sx={{ textAlign: 'center', py: 4 }}>
          <Typography variant="h6" color="error" gutterBottom>
            TMP not found
          </Typography>
          <Button variant="contained" onClick={handleBack}>
            Back to TMP List
          </Button>
        </Box>
      </DashboardContent>
    );
  }

  return (
    <DashboardContent>
      <CustomBreadcrumbs
        heading="Traffic Management Plan"
        links={[
          { name: 'Dashboard', href: paths.dashboard.root },
          { name: 'My Schedule', href: paths.schedule.root },
          { name: 'TMP', href: paths.schedule.tmp.list },
          { name: `Job #${tmpData.job?.job_number}` },
        ]}
        action={
          <Button
            variant="outlined"
            onClick={handleBack}
            startIcon={<Iconify icon="solar:arrow-left-bold" />}
          >
            Back
          </Button>
        }
        sx={{ mb: { xs: 3, md: 5 } }}
      />

      <Stack spacing={3}>
        {/* Job & Client Information */}
        <Card>
          <CardHeader title="Job Information" />
          <CardContent>
            <Stack spacing={2}>
              <Box>
                <Typography variant="body2" color="text.secondary">
                  Job Number
                </Typography>
                <Typography variant="body1" fontWeight="bold">
                  #{tmpData.job?.job_number}
                </Typography>
              </Box>

              <Box>
                <Typography variant="body2" color="text.secondary">
                  Site
                </Typography>
                <Typography variant="body1">{tmpData.site?.name}</Typography>
                {tmpData.site?.display_address && (
                  <Typography variant="caption" color="text.secondary">
                    {tmpData.site.display_address}
                  </Typography>
                )}
              </Box>

              <Box>
                <Typography variant="body2" color="text.secondary">
                  Client
                </Typography>
                <Box sx={{ display: 'flex', alignItems: 'center', gap: 1.5, mt: 0.5 }}>
                  <Avatar
                    src={tmpData.client?.logo_url}
                    alt={tmpData.client?.name}
                    sx={{ width: 32, height: 32 }}
                  >
                    {tmpData.client?.name?.charAt(0)?.toUpperCase() || 'C'}
                  </Avatar>
                  <Typography variant="body1">{tmpData.client?.name}</Typography>
                </Box>
              </Box>

              <Box>
                <Typography variant="body2" color="text.secondary">
                  Date
                </Typography>
                <Typography variant="body1">
                  {tmpData.job?.start_time ? fDate(tmpData.job.start_time) : '-'}
                </Typography>
              </Box>
            </Stack>
          </CardContent>
        </Card>

        {/* Traffic Management Plans Carousel */}
        <Card>
          <CardHeader title="Traffic Management Plans" />
          <CardContent>
            <TmpCarousel
              tmpForms={[...(allTmpsWithSignedUrls.length > 0 ? allTmpsWithSignedUrls : allTmpForms)]
                .filter((tmp) => tmp.pdf_url) // Only show TMPs with PDFs
                .sort((a, b) => 
                  new Date(a.created_at).getTime() - new Date(b.created_at).getTime()
                )}
              workers={workers}
              timesheetManagerId={tmpData.timesheet_manager?.id}
              currentTmpId={tmpId}
              onSelectTmp={handleSelectTmp}
              onAddNewTmp={() => {}} // Workers can't add TMPs
              onConfirmTmp={(id) => {
                setConfirmingTmpId(id);
                setConfirmDialogOpen(true);
              }}
              canEdit={false}
              embedded={true}
              hideWorkers={true}
              hideAddedBy={true}
            />
          </CardContent>
        </Card>
      </Stack>

      {/* Confirmation Dialog */}
      <Dialog
        open={confirmDialogOpen}
        onClose={() => {
          setConfirmDialogOpen(false);
          setAcknowledged(false);
        }}
        maxWidth="sm"
        fullWidth
      >
        <DialogTitle>
          <Box sx={{ display: 'flex', alignItems: 'center', gap: 1 }}>
            <Iconify icon="solar:shield-check-bold" width={28} color="success.main" />
            <Typography variant="h6">Confirm Traffic Management Plan</Typography>
          </Box>
        </DialogTitle>
        
        <DialogContent>
          <Stack spacing={2}>
            <Typography variant="body1">
              Please confirm that you have reviewed and understood the Traffic Management Plan for this job.
            </Typography>
            
            <Box
              sx={{
                p: 2,
                bgcolor: (theme) => theme.palette.mode === 'dark' ? 'warning.darker' : 'warning.lighter',
                borderRadius: 1,
                border: '1px solid',
                borderColor: 'warning.main',
              }}
            >
              <Typography variant="body2" sx={{ fontWeight: 'medium', color: 'warning.main' }}>
                ⚠️ Important
              </Typography>
              <Typography variant="body2" color="text.secondary" sx={{ mt: 1 }}>
                By confirming, you acknowledge that:
              </Typography>
              <Box component="ul" sx={{ mt: 1, pl: 2, '& li': { mb: 0.5 } }}>
                <li>
                  <Typography variant="body2" sx={{ color: '#1C252E' }}>
                    You have read and understood all TMPs for this job
                  </Typography>
                </li>
                <li>
                  <Typography variant="body2" sx={{ color: '#1C252E' }}>
                    You will follow the traffic management procedures outlined
                  </Typography>
                </li>
                <li>
                  <Typography variant="body2" sx={{ color: '#1C252E' }}>
                    You understand the safety requirements and protocols
                  </Typography>
                </li>
                <li>
                  <Typography variant="body2" sx={{ color: '#1C252E' }}>
                    You will report any concerns or issues immediately
                  </Typography>
                </li>
              </Box>
            </Box>

            <FormControlLabel
              control={
                <Checkbox
                  checked={acknowledged}
                  onChange={(e) => setAcknowledged(e.target.checked)}
                  color="success"
                />
              }
              label={
                <Typography variant="body2">
                  I have read and understood the Traffic Management Plan(s) and agree to follow all procedures
                </Typography>
              }
            />
          </Stack>
        </DialogContent>
        
        <DialogActions sx={{ p: 2, gap: 1 }}>
          <Button
            variant="outlined"
            onClick={() => {
              setConfirmDialogOpen(false);
              setAcknowledged(false);
            }}
          >
            Cancel
          </Button>
          <LoadingButton
            variant="contained"
            color="success"
            loading={confirming}
            disabled={!acknowledged}
            onClick={handleConfirm}
            startIcon={<Iconify icon="solar:check-circle-bold" />}
          >
            Confirm
          </LoadingButton>
        </DialogActions>
      </Dialog>
    </DashboardContent>
  );
}

